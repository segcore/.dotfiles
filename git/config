[core]
	editor = nvim
[init]
	defaultBranch = main
[color]
	ui = auto
[help]
	autoCorrect = prompt
[rerere]
	enabled = true
[gc]
	rerereresolved = 365
[alias]
	# Some nice aliases at https://archive.kernel.org/oldwiki/git.wiki.kernel.org/index.php/Aliases.html#Advanced
	logo = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
	prune-all = !git remote | xargs -n 1 git remote prune
	sf = !sh -c 'git switch "$(git branch | cut -c 3- | fzf)"'
[pull]
	ff = only
[rebase]
	autoStash = true
